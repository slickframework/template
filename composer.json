{
  "name": "slick/template",
  "description": "Template component for Slick Framework",
  "license": "MIT",
  "homepage": "https://github.com/slickframework/template",
  "keywords": ["slick-php", "template", "twig", "slick-php-module"],
  "minimum-stability": "dev",
  "version": "v2.1.0",
  "authors": [
    {
      "name": "Filipe Silva",
      "email": "silvam.filipe@gmail.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Slick\\Template\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Slick\\Template\\": "tests"
    }
  },
  "require": {
    "php": ">=8.2",
    "slick/module-api": "dev-main",
    "slick/webstack": "^2",
    "twig/twig": "4.x-dev"
  },
  "require-dev": {
    "phpmd/phpmd": "dev-master",
    "phpspec/prophecy": "^1.0@dev",
    "phpspec/prophecy-phpunit": "^2.0@dev",
    "phpstan/phpstan": "2.0.x-dev",
    "phpunit/phpunit": "^11.4@dev",
    "squizlabs/php_codesniffer": "4.0.x-dev"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.1-dev",
      "dev-develop": "2.x-dev"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
    "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
    "check-code": "phpmd --ignore-errors-on-exit src html build/phpmd.xml > build/phpmd.html && phpstan analyze"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
